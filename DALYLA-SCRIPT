-- DALYLA PANEL (rosa)

local plr = game.Players.LocalPlayer

local gui = Instance.new("ScreenGui", plr:WaitForChild("PlayerGui"))
gui.ResetOnSpawn = false

local toggleBtn = Instance.new("TextButton", gui)
toggleBtn.Size = UDim2.new(0,60,0,60)
toggleBtn.Position = UDim2.new(0.5, -30, 0.85, 0)
toggleBtn.Text = "ðŸ’—"
toggleBtn.BackgroundColor3 = Color3.fromRGB(255,120,160)
Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(1,0)

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0,240,0,200)
frame.Position = UDim2.new(0.5, -120, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(255,150,180)
frame.Visible = false
Instance.new("UICorner", frame).CornerRadius = UDim.new(0,16)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1,0,0,34)
title.BackgroundTransparency = 1
title.Text = "DALYLA"
title.Font = Enum.Font.GothamBlack
title.TextSize = 26
title.TextColor3 = Color3.new(1,1,1)

local function createBtn(txt, y)
    local b = Instance.new("TextButton", frame)
    b.Size = UDim2.new(1,-30,0,38)
    b.Position = UDim2.new(0,15,0,y)
    b.Text = txt
    b.BackgroundColor3 = Color3.fromRGB(255,70,120)
    b.Font = Enum.Font.GothamBold
    b.TextSize = 20
    Instance.new("UICorner", b).CornerRadius = UDim.new(0,8)
    return b
end

local btn1 = createBtn("ESP BRAINROT", 45)
local btn2 = createBtn("ESP PESSOAS", 90)
local btn3 = createBtn("TELEGUIADO", 135)
local btn4 = createBtn("ROUBAR BRAINROT", 180)

toggleBtn.MouseButton1Click:Connect(function()
    frame.Visible = not frame.Visible
end)

-- Arrastar
local UserInputService = game:GetService("UserInputService")
local dragging = false
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
    end
end)

frame.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        update(input)
    end
end)
